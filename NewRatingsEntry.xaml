<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PilotLogbook.NewRatingsEntry"
             Title="New rating entry">
    <VerticalStackLayout x:Name="RatingsEntryVertStack">
        <Grid x:Name="RatingsEntryGrid" RowDefinitions="*,*,*,*,*,*">
            <Label Grid.Row="0" Text=" Date and Time " HorizontalTextAlignment="Center"/>
            <DatePicker Grid.Row="1" x:Name="RatingsEntryDate" HorizontalOptions="Center" FontAutoScalingEnabled="True"/>
            <TimePicker Grid.Row="2" x:Name="RatingsEntryTime" HorizontalOptions="Center" FontAutoScalingEnabled="True"/>
            <Label Grid.Row="3" Text=" Rating " HorizontalTextAlignment="Center"/>
            <Entry Grid.Row="4" x:Name="RatingsEntryRating"/>
            <Button x:Name="btnAddRating" Text="Add Rating" Clicked="btnAddRating_Clicked" Grid.Row="5"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>