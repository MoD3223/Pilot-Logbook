<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PilotLogbook.CreateNewUser"
             Title="Create new user profile">
    <VerticalStackLayout>
        <Label 
            Text="Login (Unique)"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="eLogin"/>
        <Label Text="Password (Optional)" HorizontalOptions="Center"/>
        <Entry x:Name="ePassword"/>
        <Label Text="Address (Optional)" HorizontalOptions="Center"/>
        <Entry x:Name="eAddress"/>
        <Label Text="Phone number (Optional)" HorizontalOptions="Center"/>
        <Entry x:Name="ePhone" Keyboard="Telephone"/>
        <Button x:Name="btnInput" Text="Add user" HorizontalOptions="Center" Clicked="btnInput_Clicked"/>
    </VerticalStackLayout>
</ContentPage>