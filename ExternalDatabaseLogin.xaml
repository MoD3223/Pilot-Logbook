<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PilotLogbook.ExternalDatabaseLogin"
             Title="ExternalDatabaseLogin">
    <VerticalStackLayout HorizontalOptions="Center">
        <Label Text="Domain name"/>
        <Entry x:Name="ExternalEntryDomain"/>
        <Label Text="Port number"/>
        <Entry x:Name="ExternalEntryPort" Keyboard="Numeric"/>
        <Label Text="Database name"/>
        <Entry x:Name="ExternalEntryDatabase"/>
        <Label Text="Login"/>
        <Entry x:Name="ExternalEntryLogin"/>
        <Label Text="Password"/>
        <Entry x:Name="ExternalEntryPass"/>
        <Button x:Name="btnTryExternalLogin" Text="Connect" Clicked="btnTryExternalLogin_Clicked"/>
    </VerticalStackLayout>
</ContentPage>